<div class="container">
 <div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each products.products}}
   <div class="col">
    <div class="card text-center border-none shadow-sm h-100">
     <img src="{{this.thumbnails.[0]}}" class="card-img-top img-fluid img-thumbnails" alt="{{this.title}}">
     <div class="card-body d-flex flex-column">
      <h2 class="card-title">{{this.title}}</h2>
      <p class="card-text">{{this.description}}</p>
      <p class="card-text"><strong>Código: </strong>{{this.code}}</p>
      <p class="card-text"><strong>Precio: </strong>${{this.price}}</p>
      <p class="card-text"><strong>Categoría: </strong>{{this.category}}</p>
      <button class="btn btn-primary">
       <a href="/products/{{this._id}}">
        Ver detalles
       </a>
      </button>
     </div>
    </div>
   </div>
  {{/each}}
 </div>
</div>
<div class="row my-5">
 <div class="col text-center my-5">
  {{#if products.hasPrevPage}}
   <a href="{{products.prevLink}}" class="btn btn-primary mx-4"><i class="fa-solid fa-backward"></i> Anterior </a>
  {{/if}}
  {{#if products.page}}
   <span class="btn btn-secondary mx-2">{{products.page}}</span>
  {{/if}}
  {{#if products.hasNextPage}}
   <a href="{{products.nextLink}}" class="btn btn-primary mx-4"> Siguiente <i class="fa-solid fa-forward"></i></a>
  {{/if}}
 </div>
</div>